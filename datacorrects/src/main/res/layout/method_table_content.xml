<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_single_bottom_line_white_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/typeface_size_two"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/id_linear_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/id_tv_no"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black_1"
            android:textSize="@dimen/typeface_size_one"/>

        <View
            android:id="@+id/id_tv_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>

        <CheckBox
            android:id="@+id/cb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/collection_checkbox_selector"
            android:focusable="true"
            android:checked="false"
            android:scaleX="0.7"
            android:scaleY="0.7" />
    </LinearLayout>

</LinearLayout>
