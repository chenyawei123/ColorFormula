<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10px">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface_size"
        android:text="10"
        android:gravity="right"
        android:visibility="gone"
        android:layout_gravity="center_vertical"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/private_center_margin"
            android:background="@drawable/bg_blue_blue_left_corner"
            android:textColor="@color/white"
            android:paddingTop="@dimen/private_center_margin"
            android:paddingBottom="@dimen/private_center_margin"
            android:gravity="center"
            android:textSize="@dimen/typeface_size" />
<!-- android:maxEms="10"
                android:maxLength="10" -->

            <com.cyw.mylibrary.customView.EdittextWithRightText
                android:id="@+id/edit_weight"
                android:paddingTop="@dimen/private_center_margin"
                android:paddingBottom="@dimen/private_center_margin"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_white_blue_right_corner"
                android:textSize="@dimen/typeface_size"
                android:maxEms="10"
                android:maxLength="10"
               ></com.cyw.mylibrary.customView.EdittextWithRightText>
        <TextView
            android:id="@+id/tv_barrel_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/typeface_size_two"
            android:layout_marginLeft="@dimen/private_center_margin"></TextView>

    </LinearLayout>

</LinearLayout>